<network>
    <name>{{ kvm_host_OvsBridgeName }}</name>
    <forward mode='bridge'/>
    <bridge name='{{ kvm_host_OvsBridgeName }}'/>
    <virtualport type='openvswitch'/>

{% for item in kvm_host_LinuxBondVlans %}
    <portgroup name='native_{{ item }}'>
         <vlan trunk='yes'>
            <tag id='{{ item }}' nativeMode='untagged'/>
        </vlan>
    </portgroup>
{% endfor %}

    <portgroup name='trunk_all' default='yes'>
        <vlan trunk='yes'>
        {% for item in kvm_host_LinuxBondVlans %}
            <tag id='{{ item }}'/>
        {% endfor %}
        </vlan>
    </portgroup>
</network>